<h1>
    新横浜混雑アラートアプリ / 通知先登録解除
</h1>
<br>
<p><font color="red"><strong>@vm.Message</strong></font></p>
<br>
<p>
    通知先ID
    <input autofocus
           required
           type="text"
           size="16"
           maxlength="16"
           pattern="^[0-9A-Za-z]+$"
           @bind="vm.Id"
           placeholder="sato2703"
           title="1~16文字の半角英数字" /><br>
</p>

<p>
    パスワード
    <input autofocus
           required
           type="password"
           size="16"
           minlength="8"
           maxlength="16"
           pattern="^[0-9A-Za-z]+$"
           @bind="vm.Pwd"
           placeholder="password12345678"
           title="8~16文字の半角英数字" /><br>
</p>

<button class="btn btn-primary" @onclick="CallUnregistration">
    登録解除
</button>

<button class="btn btn-secondary" @onclick="ToIndex">
    やめる
</button>

@code {
    private void ToIndex()
    {
        NavigationManager.NavigateTo("/");
        vm.Id = null;
        vm.Pwd = null;
        vm.Message = null;
        this.StateHasChanged();
    }

    private void CallUnregistration()
    {
        vm.Message = null;
        if (vm.InputIsValid())
        {
            if (vm.DoUnregist())
            {
                vm.Id = null;
            }
        }
        vm.Pwd = null;
        this.StateHasChanged();
    }
}

